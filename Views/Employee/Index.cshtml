@model IList<site.Models.Domain.Employee>

@{
}

<h1>Employee</h1>
<a type="submit" class="btn btn-primary" asp-area="" asp-controller="Employee" asp-action="Add">Добавить</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Identifier</th>
            <th>PostId</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
                        <tr>
                    <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Identifier</td>
                    <td>@employee.PostId</td>
                    <td><a href="Employee/View/@employee.Id">Просмотреть</a></td>
                        </tr>
        }
    </tbody>
</table>